{
  "name": "asset-management-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "個人の資産を一元管理するWebアプリケーション",  
  "scripts": {
    "dev": "npm run db:migrate:dev && next dev",
    "build": "npm run db:deploy:prod && next build",
    "heroku-postbuild": "npm run build",
    "start": "next start",
    "start:next": "next start",
    "lint": "next lint",
    "build:schema:dev": "cross-env NODE_ENV=development node script/build-schema.js",
    "build:schema:prod": "cross-env NODE_ENV=production node script/build-schema.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:dev": "npm run build:schema:dev && npx prisma migrate dev",
    "db:deploy:prod": "npm run build:schema:prod && npx prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@asset-management-app/shared": "file:./shared",
    "@headlessui/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.8.2",
    "@types/express": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "color-convert": "^3.1.0",
    "color-name": "^2.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.460.0",
    "next": "15.3.3",
    "path-to-regexp": "^8.2.0",
    "prisma": "^6.8.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.0",
    "recharts": "^2.15.3",
    "shared": "file:./shared",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/file-saver": "^2.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "prisma": "^6.8.2",
    "tailwindcss": "^3.4.0",
    "tsx": "^3.12.7",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
