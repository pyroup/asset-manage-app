{
  "name": "shisan-kanri",
  "version": "1.0.0",
  "description": "個人の資産を一元管理するWebアプリケーション",
  "private": true,
  "scripts": {
    "dev": "cd app && npm run dev",
    "build": "cd app && npm run build",
    "start": "cd app && npm start",
    "install:all": "npm install && cd app && npm install && cd ../shared && npm install",
    "clean:all": "rmdir /s /q node_modules app\\node_modules shared\\node_modules 2>nul || rm -rf node_modules app/node_modules shared/node_modules",
    "lint": "cd app && npm run lint",
    "test": "cd app && npm run test",
    "db:generate": "cd app && npm run db:generate",
    "db:push": "cd app && npm run db:push",
    "db:migrate": "cd app && npm run db:migrate",
    "db:seed": "cd app && npm run db:seed",
    "db:studio": "cd app && npm run db:studio",
    "deploy": "npm run build && npm start"
  },
  "keywords": [
    "資産管理",
    "投資",
    "ポートフォリオ",
    "株式",
    "資産運用",
    "finance",
    "portfolio",
    "investment"
  ],
  "author": "Shisan Kanri Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
} 